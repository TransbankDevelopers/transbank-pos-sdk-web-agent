{
  "name": "transbank-pos-sdk-web-agent",
  "productName": "Transbank POS Agent",
  "version": "3.1.4",
  "description": "Agente para SDK Web de POS integrado",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts ."
  },
  "keywords": [],
  "author": {
    "name": "Transbank Developers",
    "email": "transbankdevelopers@continuum.cl"
  },
  "license": "BSD-3-Clause",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/assets/icons/icon",
        "extraResource": "src/assets/trayIcons"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "transbank_pos_sdk_web_client_node"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "loggerPort": 9001,
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.53",
    "@electron-forge/maker-deb": "6.0.0-beta.53",
    "@electron-forge/maker-rpm": "6.0.0-beta.53",
    "@electron-forge/maker-squirrel": "6.0.0-beta.53",
    "@electron-forge/maker-zip": "6.0.0-beta.53",
    "@electron-forge/plugin-webpack": "6.0.0-beta.53",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "css-loader": "^4.2.1",
    "electron": "11",
    "electron-rebuild": "^2.3.5",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.20.0",
    "fork-ts-checker-webpack-plugin": "^5.0.14",
    "node-loader": "^1.0.1",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.2",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "electron-squirrel-startup": "^1.0.0",
    "express": "4.15.2",
    "socket.io": "^2.3.0",
    "spacetime": "^6.16.3",
    "transbank-pos-sdk": "^2.1.2",
    "vue": "^2.6.14",
    "vue-loader": "^15.10.1",
    "vue-template-compiler": "^2.6.14"
  }
}
